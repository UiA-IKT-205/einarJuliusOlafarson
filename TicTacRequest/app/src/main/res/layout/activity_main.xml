<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/testVolley"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="createGame"
        app:layout_constraintBottom_toBottomOf="@+id/putGameId"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/testVolley2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="poolGame"
        app:layout_constraintBottom_toTopOf="@+id/putGameId"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/testVolley"
        app:layout_constraintVertical_bias="0.275" />

    <Button
        android:id="@+id/testvolley3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update Game"
        app:layout_constraintBottom_toTopOf="@+id/putGameId"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/testVolley2" />

    <EditText
        android:id="@+id/putGameId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="putgameId"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.731" />


</androidx.constraintlayout.widget.ConstraintLayout>